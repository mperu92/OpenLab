
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Open Lab</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Backend/Dashboard/Index" class="nav-link text-dark">Backoffice Dashboard</a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Backend" asp-controller="Users" asp-action="Index">Users</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Backend" asp-controller="News" asp-action="Index">News</a>
                    </li>
                </ul>
                <form asp-action="LogOff" asp-controller="Account" class="ml-auto">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a href="#" class="nav-link text-dark">@User.Identity.Name.ToString()</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a href="/Backend/Dashboard/Index" class="nav-link text-dark">Backoffice</a>
                            </li>
                        }
                        <li class="nav-item">
                            <input type="submit" value="Logout" class="bg-transparent border-0 nav-link text-dark" />
                        </li>
                    </ul>
                </form>
            </div>
        </div>
    </nav>
</header>